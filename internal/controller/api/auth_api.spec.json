{
  "openapi": "3.0.0",
  "servers": [
    {
      "description": "Cloud-Connector Auth API",
      "url": "/api/cloud-connector/auth/"
    }
  ],
  "info": {
    "description": "Cloud-Connector Auth Service",
    "version": "1.0.0",
    "title": "Cloud-Connector Auth Service"
  },
  "tags": [
    {
      "name": "api",
      "description": "RESTful service"
    }
  ],
  "paths": {
    "/v1/token/": {
      "post": {
        "tags": [
          "api"
        ],
        "summary": "This method will verify the contents of the identity header (generated by the api gateway), verify that the caller authenticated with a valid certificate and return a JSON Web Token.",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TokenRequestV1"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResponseV1"
                }
              }
            }
          },
          "401": {
            "description": "Forbidden"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {},
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-rh-identity",
        "description": "Base64-encoded JSON identity header provided by 3Scale. Contains an account number of the user issuing the request. Format of the JSON: {\"identity\": {\"account_number\": \"12345678\"}}"
      }
    },
    "schemas": {
      "TokenRequestV1": {
        "type": "object",
        "properties": {
          "placeholder": {
            "type": "string"
          }
        }
      },
      "TokenResponseV1": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string"
          },
          "expires_in": {
            "type": "string"
          },
          "aws_token_components": {
            "type": "object",
            "properties": {
              "token_value": {
                "type": "string",
                "description": "This field includes the token header and the claims set"
              },
              "token_signature": {
                "type": "string",
                "description": "This field contains the base64 encoded (not base64-url encoded) signature"
              }
            }
          }
        }
      }
    }
  }
}